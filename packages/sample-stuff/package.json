{
  "name": "@gurunars/sample-stuff",
  "version": "0.3.1",
  "description": "Some lib",
  "private": false,
  "license": "MIT",
  "scripts": {
    "show-package": "yarn clean && yarn build && npm pack --dry-run",
    "clean": "rm -rf dist storybook-static generated",
    "build": "rollup -c ../../.config/build/rollup.config.js",
    "lint": "tslint --project ../../tsconfig.json --config ../../.config/build/tslint.json \"src/**/*.ts{,x}\"",
    "format": "tslint --project ../../tsconfig.json --config ../../.config/build/tslint.json --fix \"src/**/*.ts{,x}\"",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/../../tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/../../.config/testing/enzyme.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/../../.config/testing/fileMock.js"
    },
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "jsonpack": "^1.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  }
}