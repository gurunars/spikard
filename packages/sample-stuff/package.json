{
  "name": "@gurunars/sample-stuff",
  "version": "0.3.6",
  "description": "Some lib",
  "private": false,
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist storybook-static generated",
    "show-package": "yarn clean && yarn build && npm pack --dry-run",
    "build": "rollup -c ../../.config/build/rollup.config.js",
    "test": "jest",
    "lint": "tslint --config ../../.config/build/tslint.json \"src/**/*.ts{,x}\"",
    "format": "tslint --config ../../.config/build/tslint.json --fix \"src/**/*.ts{,x}\""
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com/gurunars/spikard.git",
    "type": "git",
    "directory": "packages/name"
  },
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "jsonpack": "^1.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/../../tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/../..//packages/**/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/../../.config/testing/enzyme.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/../..//.config/testing/fileMock.js"
    },
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-centered": "^5.3.14",
    "@storybook/addon-info": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "enzyme": "^3.11.0",
    "react-test-renderer": "^16.13.0",
    "storybook-host": "^5.1.0"
  }
}