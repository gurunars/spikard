{
  "name": "@gurunars/spikard",
  "version": "0.4.0",
  "description": "Some lib",
  "author": "Anton Berezin <gurunars@gmail.com>",
  "private": false,
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com:gurunars/spikard.git",
    "type": "git"
  },
  "scripts": {
    "show-package": "yarn clean && yarn build && npm pack --dry-run",
    "clean": "rm -rf dist storybook-static generated",
    "build": "rollup -c .config/build/rollup.config.js",
    "update": "yarn upgrade-interactive --latest",
    "lint": "tslint --project tsconfig.json --config .config/build/tslint.json \"src/**/*.ts{,x}\"",
    "format": "tslint --project tsconfig.json --config .config/build/tslint.json --fix \"src/**/*.ts{,x}\"",
    "test": "jest",
    "plop": "plop --plopfile .config/templates/plopfile.js",
    "docs": "start-storybook --config-dir .config/docs -p 6006",
    "build-docs": "build-storybook"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/.config/testing/enzyme.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/.config/testing/fileMock.js"
    },
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@babel/preset-typescript": "^7.9.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-centered": "^5.3.18",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@svgr/rollup": "^5.3.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.3.0",
    "plop": "^2.6.0",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.6.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-watch": "^4.3.1",
    "storybook-host": "^5.1.0",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "jsonpack": "^1.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
