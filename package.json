{
  "name": "@gurunars/spikard",
  "version": "0.2.52",
  "description": "Some lib",
  "author": "Anton Berezin <gurunars@gmail.com>",
  "private": false,
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com:gurunars/spikard.git",
    "type": "git"
  },
  "scripts": {
    "show-package": "yarn clean && yarn build && npm pack --dry-run",
    "clean": "rm -rf dist storybook-static generated",
    "build": "rollup -c .config/build/rollup.config.js",
    "update": "yarn upgrade-interactive --latest",
    "lint": "tslint --project .config/build/tsconfig.json \"src/**/*.ts{,x}\"",
    "format": "tslint --project .config/build/tsconfig.json --fix \"src/**/*.ts{,x}\"",
    "test": "jest",
    "plop": "plop --plopfile .config/templates/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": ".config/build/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/.config/testing/enzyme.js"
    ],
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$",
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/.config/testing/svgrMock.js"
    }
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-centered": "^5.2.5",
    "@storybook/addon-info": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@svgr/rollup": "^4.3.3",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.20",
    "@types/lodash": "^4.14.144",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-test-renderer": "^16.9.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^24.9.0",
    "plop": "^2.5.2",
    "react-test-renderer": "^16.11.0",
    "rollup": "^1.26.3",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-watch": "^4.3.1",
    "storybook-host": "^5.1.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "jsonpack": "^1.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "peerDependencies": {
    "webpack": "^4.41.2"
  }
}
