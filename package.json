{
  "name": "@gurunars/spikard",
  "version": "0.3.1",
  "description": "Some lib",
  "author": "Anton Berezin <gurunars@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com:gurunars/spikard.git",
    "type": "git"
  },
  "scripts": {
    "plop": "plop --plopfile .config/templates/plopfile.js",
    "docs": "start-storybook --config-dir .config/docs -p 6006",
    "build-docs": "build-storybook",
    "clean": "rm -rf packages/**/dist packages/**/storybook-static packages/**/generated",
    "update": "yarn upgrade-interactive --latest",
    "lint": "tslint --project tsconfig.json --config .config/build/tslint.json \"packages/**/src/**/*.ts{,x}\"",
    "format": "tslint --project tsconfig.json --config .config/build/tslint.json --fix \"packages/**/src/**/*.ts{,x}\"",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/packages/**/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/.config/testing/enzyme.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/.config/testing/fileMock.js"
    },
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.7.0",
    "@svgr/rollup": "^4.3.3",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.21",
    "@types/lodash": "^4.14.144",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-test-renderer": "^16.9.1",
    "babel-loader": "^8.0.6",
    "jest": "^24.9.0",
    "plop": "^2.5.3",
    "rollup": "^1.26.3",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-watch": "^4.3.1",
    "ts-jest": "^24.1.0",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.6.4",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-centered": "^5.2.5",
    "@storybook/addon-info": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5"
  }
}