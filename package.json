{
  "name": "@gurunars/spikard",
  "version": "0.3.2",
  "description": "Some lib",
  "author": "Anton Berezin <gurunars@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com/gurunars/spikard.git",
    "type": "git",
    "directory": "packages/name"
  },
  "scripts": {
    "show-package": "yarn workspaces run show-package",
    "release": "yarn workspaces run publish --non-interactive",
    "plop": "plop --plopfile .config/templates/plopfile.js",
    "docs": "start-storybook --config-dir .config/docs -p 6006",
    "build": "yarn workspaces run build",
    "build-docs": "build-storybook --config-dir .config/docs",
    "clean": "yarn workspaces run clean && rm -rf storybook-static",
    "update": "yarn upgrade-interactive --latest",
    "lint": "tslint --project tsconfig.json --config .config/build/tslint.json \"packages/**/src/**/*.ts{,x}\"",
    "format": "tslint --project tsconfig.json --config .config/build/tslint.json --fix \"packages/**/src/**/*.ts{,x}\"",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/packages/**/src/**/*.ts{,x}"
    ],
    "coveragePathIgnorePatterns": [
      "tests\\.tsx?$",
      "story\\.tsx?$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/.config/testing/enzyme.js"
    ],
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/.config/testing/fileMock.js"
    },
    "preset": "ts-jest",
    "testRegex": "tests\\.tsx?$"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.8.3",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-centered": "^5.3.12",
    "@storybook/addon-info": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/react": "^5.3.12",
    "@svgr/rollup": "^5.1.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "babel-loader": "^8.0.6",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.1.0",
    "plop": "^2.5.3",
    "rollup": "^1.31.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-watch": "^4.3.1",
    "ts-jest": "^25.2.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  }
}